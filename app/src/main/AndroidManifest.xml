<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tests">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/metrodroid_music"
        android:theme="@style/AppTheme">
        <service
            android:name="models.mediawrappers.FileStreamingMediaService"
            android:enabled="true" />
        <activity
            android:name="controllers.TestActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="controllers.MyPlaylistsActivity"
            android:label="@string/my_playlists">
        </activity>
        <activity
            android:name="controllers.GeneratorActivity"
            android:label="@string/playlist_generator">
        </activity>
        <activity
            android:name="controllers.MediaPlayer"
            android:label="Media Player">
        </activity>
        <activity
            android:name="controllers.MainActivity"
            android:label="@string/title_activity_test"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="my-first-android-app-login" />
            </intent-filter>
        </activity>
    </application>
</manifest>

