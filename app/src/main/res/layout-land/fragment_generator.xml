<?xml version="1.0" encoding="utf-8"?>
<!-- @author judith -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="controllers.mainFragments.generatorMainViewGroup"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/listening">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:weightSum="1.0"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_weight="0.05"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_weight="0.9"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/songsCountLimitBtn"
                    android:text="@string/songs_count_limit_text"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/genresBtn"
                    android:text="@string/genres"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_alignTop="@id/songsCountLimitBtn"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/artistsBtn"
                    android:text="@string/artists"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/songsBtn"
                    android:text="@string/songs"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_alignTop="@id/artistsBtn"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/startGeneratorBtn"
                    android:text="@string/start_generator"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>