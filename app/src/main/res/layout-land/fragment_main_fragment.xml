<?xml version="1.0" encoding="utf-8"?>
<!-- author judith -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="controllers.mainFragments.mainViewGroup"
    android:background="@drawable/listening">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:weightSum="1.0"
        android:layout_gravity="center">
    <LinearLayout
        android:layout_weight="0.05"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"/>
        <LinearLayout
            android:layout_weight="0.9"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/myPlaylistsBtn"
                    android:text="@string/my_playlists"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/playlistsGeneratorBtn"
                    android:text="@string/playlist_generator"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_alignTop="@+id/myPlaylistsBtn"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/settingsBtn"
                    android:text="@string/priority_list"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/otherPlaylistsBtn"
                    android:text="@string/playlist_browser"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_alignTop="@+id/settingsBtn"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/button5"
                    android:text="@string/spotify_login"
                    android:layout_width="223dp"
                    android:layout_height="fill_parent"
                    style="@style/btnStyleOrange"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>